 lib/Target/RISCV/RISCVInstrInfo.td  |  6 ++++++
 lib/Target/RISCV/RISCVInstrInfoM.td | 28 ++++++++++++++++++++++++++++
 lib/Target/RISCV/RISCVSubtarget.h   |  2 ++
 test/MC/RISCV/rv32i-invalid.s       |  3 +++
 test/MC/RISCV/rv32m-valid.s         | 33 +++++++++++++++++++++++++++++++++
